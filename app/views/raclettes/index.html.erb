<div class="container">
<h1>Raclettes</h1>

<div class="cards-container">
  <% @raclettes.each do |raclette| %>
    <%= link_to raclette_path(raclette) do %>
    <div class="flip-card">
      <div class="flip-card-inner">
        <div class="flip-card-front">
          <div class="capsules sticky-bottom">
            <div class="capsule"><%= raclette.category %></div>
            <div class="capsule"><%= raclette.capacity %> places</div>
            <div class="capsule"><%= raclette.price %>â‚¬</div>
          </div>
        </div>
        <div class="flip-card-back">
          <p><%= raclette.description %></p>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>


</div>
